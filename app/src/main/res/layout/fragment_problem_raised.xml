<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainFragment.ProblemRaised">

    <TextView
        android:id="@+id/demoTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Problem raised by anyone"
        android:gravity="center"
        android:layout_margin="10dp"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/tImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@drawable/ic_for_student"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/problemRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="visible"
        />


    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        >


        <EditText
            android:id="@+id/problemEt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_problem_raised"
            android:ems="10"
            android:hint="Raise problem you faced."
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>

        <ImageView
            android:id="@+id/nextBtn"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:src="@drawable/ic_right_arrow" />

    </LinearLayout>

    <TextView
        android:id="@+id/messageTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Your identity is always protected"
        android:textSize="12dp" />

</LinearLayout>